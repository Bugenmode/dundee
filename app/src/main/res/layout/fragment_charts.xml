<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<import type="com.strv.dundee.model.entity.Coin" />

		<variable
			name="viewModel"
			type="com.strv.dundee.ui.charts.ChartsViewModel" />

		<variable
			name="view"
			type="com.strv.dundee.ui.charts.ChartsView" />

	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_margin="@dimen/spacing_8">

			<com.github.mikephil.charting.charts.LineChart
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:init="@{true}"
				app:historyPrizes="@{viewModel.history[Coin.BTC]}"
				app:currency="@{viewModel.mainViewModel.currency}"
				app:exchangeRates="@{viewModel.mainViewModel.exchangeRates.data}" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_margin="@dimen/spacing_8">

			<com.github.mikephil.charting.charts.LineChart
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:init="@{true}"
				app:historyPrizes="@{viewModel.history[Coin.ETH]}"
				app:currency="@{viewModel.mainViewModel.currency}"
				app:exchangeRates="@{viewModel.mainViewModel.exchangeRates.data}" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_margin="@dimen/spacing_8">

			<com.github.mikephil.charting.charts.LineChart
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:init="@{true}"
				app:historyPrizes="@{viewModel.history[Coin.XRP]}"
				app:currency="@{viewModel.mainViewModel.currency}"
				app:exchangeRates="@{viewModel.mainViewModel.exchangeRates.data}" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_margin="@dimen/spacing_8">

			<com.github.mikephil.charting.charts.LineChart
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:init="@{true}"
				app:historyPrizes="@{viewModel.history[Coin.LTC]}"
				app:currency="@{viewModel.mainViewModel.currency}"
				app:exchangeRates="@{viewModel.mainViewModel.exchangeRates.data}" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_margin="@dimen/spacing_8">

			<com.github.mikephil.charting.charts.LineChart
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:init="@{true}"
				app:historyPrizes="@{viewModel.history[Coin.BCH]}"
				app:currency="@{viewModel.mainViewModel.currency}"
				app:exchangeRates="@{viewModel.mainViewModel.exchangeRates.data}" />

		</android.support.v7.widget.CardView>

	</LinearLayout>

</layout>

