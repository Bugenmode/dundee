<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.strv.dundee">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".app.App"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:launchMode="singleTask"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:theme="@style/AppTheme">
		<activity android:name=".ui.main.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".ui.auth.SignInActivity" />
		<activity
			android:name=".ui.auth.SignUpActivity"
			android:label="@string/new_account" />
		<activity
			android:name=".ui.wallet.EditWalletAmountActivity"
			android:label="@string/add_amount" />
		<activity
			android:name=".ui.wallet.WalletDetailActivity" />

	</application>

</manifest>